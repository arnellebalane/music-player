#visualization-container
    display flex
    justify-content center
    align-items center
    flex-grow 0
    height 100vh
    padding-top 5vh


.visualization
    width 50vh
    margin 20px
    position relative

    &::before
        content ""
        display block
        padding-top 100%


.visualization-content
    position absolute
    top 0
    left 0
    right 0
    bottom 0
    border-radius 50%
    background-color #e91e63
